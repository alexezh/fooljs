{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "out",
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "rootDir": "src",
  },
  "include": [
    "src/**/*"
  ], // <- only compile files under src
  "exclude": [
    "node_modules",
    "out"
  ] // <- don't recompile output / deps}
}